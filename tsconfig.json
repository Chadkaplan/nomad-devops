{
  "include": [
    "src/**/*"
  ],
  "exlude": [
    "no_compile/**/*"
  ],
  "compilerOptions": {
    "lib": [
      "esnext",
      "dom"
    ],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "target": "es6",
    "module": "commonjs",
    "strict": false,
    "sourceMap": true,
    "esModuleInterop": true,
    "preserveSymlinks": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "outDir": "./dist",
    "types": [
      "node"
    ],
    "typeRoots": [
      "node_modules/@types"
    ]
  }
}