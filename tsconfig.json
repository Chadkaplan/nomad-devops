{
    "include": ["aws/**/*", "bin/**/*", "lib/**/*"],
    "compilerOptions": {
        "lib": ["esnext", "dom"],
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "outDir": "dist",
        "target": "es6",
        "module": "commonjs",
        "strict": false,
        "esModuleInterop": true,
        "preserveSymlinks": true,
        "allowSyntheticDefaultImports": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "types": ["node"],
        "typeRoots": ["node_modules/@types"],
        "baseUrl": ".",
        "paths": {
            "@config": ["./config.ts"],
            "@lib": ["./lib/index.ts"]
        }
    }
}
